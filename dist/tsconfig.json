{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./",
    "baseUrl": "app",
    "strict": false,
    "rootDir": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths":{
      "@root/*": "./*",
      "@app/*": "./app/*",
      "@public/*": "./public/*",
      "@services/*": [
        "./services/*"
      ]
    }
  },
  "include": [
    "./",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
